<Window x:Class="INTERMODULAR.MVVM.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:INTERMODULAR.MVVM.View" 
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d" 
        Height="450" 
        Width="800"
        Title="MainView"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen">
    <Border CornerRadius="30,30,30,30">
        <Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFBDF14E" Offset="0"/>
                <GradientStop Color="#FF00CC8F" Offset="1"/>
                <GradientStop Color="#FF5EDE6E" Offset="0.715"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="177*"/>
                <ColumnDefinition Width="623*"/>
            </Grid.ColumnDefinitions>

            <Border CornerRadius="30,30,30,30" Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="127*"/>
                        <RowDefinition Height="98*"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Column="0" VerticalAlignment="Center">
                        
                        <Border DockPanel.Dock="Top" Width="auto" Height="70" Margin="10,0,10,10">
                            <Border.Background>
                                <ImageBrush Stretch="Uniform" ImageSource="/Images/LogoEnteroBlanco.png"/>
                            </Border.Background>
                        </Border>
                        
                        <Border Margin="0,0,0,10"
                                Width="80" 
                                Height="80"
                                Background="White" 
                                CornerRadius="100"
                                DockPanel.Dock="Top">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="../../Images/left_login.jpg"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>
                        <TextBlock Text="Nombre" DockPanel.Dock="Top" 
                                   TextAlignment="Center" 
                                   FontSize="16"
                                   Foreground="White"/>

                        <TextBlock Text="Apellidos" DockPanel.Dock="Top" 
                                   TextAlignment="Center" 
                                   FontSize="16"
                                   Foreground="White"/>
                    </DockPanel>

                    <StackPanel Grid.Row="1">
                        <RadioButton Style="{StaticResource userBtn}" Content="Usuarios"/>
                        <RadioButton Style="{StaticResource ruteBtn}" Content="Rutas"/>
                        <RadioButton Style="{StaticResource profileBtn}" Content="Perfil"/>
                    </StackPanel>

                </Grid>
            </Border>

            <Border CornerRadius="30,30,30,30" Grid.RowSpan="2" Grid.Column="1"
                Background="White" 
>
                <TextBlock Text="Nombre" FontSize="20" Foreground="Black" Margin="43,34,492,388"/>

            </Border>
        </Grid>
    </Border>
</Window>
