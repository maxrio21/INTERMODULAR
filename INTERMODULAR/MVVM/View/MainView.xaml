<Window x:Class="INTERMODULAR.MVVM.View.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:INTERMODULAR.MVVM.View" 
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:viewModel="clr-namespace:INTERMODULAR.MVVM.ViewModel"
        mc:Ignorable="d" 
        Height="650" 
        Width="1000"
        Title="MainView"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        >

    <Window.DataContext>
        <viewModel:MainViewModel/>
    </Window.DataContext>

    <Border CornerRadius="30,30,30,30">
        <!--<Border.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFA5D26A" Offset="0"/>
                <GradientStop Color="#FF26BBAC" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>-->
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <!--<Grid.ColumnDefinitions>
                <ColumnDefinition Width="177*"/>
                <ColumnDefinition Width="623*"/>
            </Grid.ColumnDefinitions>-->

            <Border CornerRadius="30,30,30,30" Grid.Column="0" Margin="0,46,817,0" Panel.ZIndex="1000">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFA5D26A" Offset="0"/>
                        <GradientStop Color="#FF26BB9C" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="10" 
                                      RenderingBias="Performance" 
                                      ShadowDepth="0" Color="#FFB7B7B7"/>
                </Border.Effect>
                <Grid Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="39*"/>
                        <RowDefinition Height="41*"/>
                    </Grid.RowDefinitions>
                    <DockPanel Grid.Column="0" 
                               VerticalAlignment="Center" 
                               Height="292">

                        <Border DockPanel.Dock="Top" 
                                Width="auto" Height="90" 
                                Margin="10,0,10,10">
                            <Border.Background>
                                <ImageBrush Stretch="Uniform" ImageSource="/Images/LogoEnteroBlanco.png"/>
                            </Border.Background>
                        </Border>

                        <Border x:Name="profile_img"
                                Margin="0,0,0,10"
                                Width="80" 
                                Height="80"
                                Background="White" 
                                CornerRadius="25"
                                DockPanel.Dock="Top">
                        </Border>
                        <TextBlock Text="Nombre" DockPanel.Dock="Top" 
                                   TextAlignment="Center" 
                                   FontSize="16"
                                   Foreground="White"/>

                        <TextBlock Text="Apellidos" DockPanel.Dock="Top" 
                                   TextAlignment="Center" 
                                   FontSize="16"
                                   Foreground="White"/>
                    </DockPanel>

                    <StackPanel Grid.Row="1" Margin="0,2,0,90">
                        <RadioButton Style="{StaticResource homeBtn}" Content="Home" IsChecked="True" Command="{Binding HomeVC}"/>
                        <RadioButton Style="{StaticResource userBtn}" Content="Usuarios" Command="{Binding UserVC}"/>
                        <RadioButton Style="{StaticResource ruteBtn}" Content="Rutas" Command="{Binding PubliVC}"/>
                        <RadioButton Style="{StaticResource profileBtn}" Content="Perfil"/>
                    </StackPanel>
                    <RadioButton Style="{StaticResource logOutBtn}" Content="Logout" Grid.Row="1" VerticalAlignment="Bottom"/>

                </Grid>
            </Border>

            <Border CornerRadius="30,30,30,30" Margin="56,0,0,0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FFEFEFEF"/>
                        <GradientStop Color="#FFD2D2D2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <ContentControl Grid.ColumnSpan="1" 
                            Grid.Row="1"
                            Margin="156,30,30,30"
                            Content="{Binding CurrentView}"/>

            </Border>
        </Grid>
    </Border>
</Window>
